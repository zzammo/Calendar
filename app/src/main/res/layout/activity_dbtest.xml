<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test.DBTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <EditText
            android:id="@+id/activity_DB_test_title_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="title"/>
<!--        <TimePicker-->
<!--            android:id="@+id/activity_DB_test_timePicker"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:timePickerMode="spinner"/>-->
        <EditText
            android:id="@+id/activity_DB_test_location_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="location"/>

        <Button
            android:id="@+id/activity_DB_test_localDB_insertBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="l_write"/>
        <Button
            android:id="@+id/activity_DB_test_localDB_deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="l_delete"/>

        <Button
            android:id="@+id/activity_DB_test_serverDB_insertBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="s_write"/>
        <Button
            android:id="@+id/activity_DB_test_serverDB_deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="s_delete"/>

        <Button
            android:id="@+id/activity_DB_test_combine_insertBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="c_write"/>
        <Button
            android:id="@+id/activity_DB_test_combine_deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="c_delete"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>