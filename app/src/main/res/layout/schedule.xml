<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_schedule"
    android:background="@color/bg_white"
    android:animateLayoutChanges="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15sp"
                android:layout_marginVertical="5sp"
                android:layout_marginHorizontal="10sp"
                android:textColor="@color/text_white"
                android:background="@null"
                android:hint=" 제목"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginBottom="10sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일정 시간"
                    android:padding="8sp"
                    android:layout_margin="5sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <Switch
                    android:id="@+id/allday_switch"
                    android:text="하루종일    "
                    android:textColor="@color/text_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:layout_margin="5sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="7sp"
                    android:padding="7sp"
                    android:animateLayoutChanges="true"
                    app:layout_constraintTop_toBottomOf="@+id/allday_switch"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:animateLayoutChanges="true">
                        <TextView
                            android:id="@+id/src_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1월 18일 (수)"
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"
                            android:textAlignment="center"/>
                        <TextView
                            android:id="@+id/src_time"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="오전 8:00"
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:animateLayoutChanges="true">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_arrow_right_alt_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:animateLayoutChanges="true">
                        <TextView
                            android:id="@+id/dst_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="1월 18일 (수)"
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"/>
                        <TextView
                            android:id="@+id/dst_time"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="오전 8:00"
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:id="@+id/date_src_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10sp"
                android:animateLayoutChanges="true"
                android:visibility="gone">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginVertical="3sp"/>
                <DatePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:calendarTextColor="@color/text_white"
                    android:headerBackground="@color/text_white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/date_dst_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10sp"
                android:animateLayoutChanges="true"
                android:visibility="gone">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginVertical="3sp"/>
                <DatePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:calendarTextColor="@color/text_white"
                    android:headerBackground="@color/text_white" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/time_src_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10sp"
                android:animateLayoutChanges="true"
                android:visibility="gone">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginVertical="3sp"/>
                <TimePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:calendarTextColor="@color/text_white"
                    android:headerBackground="@color/text_white"
                    android:timePickerMode="spinner"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/time_dst_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10sp"
                android:animateLayoutChanges="true"
                android:visibility="gone">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginVertical="3sp"/>
                <TimePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:calendarTextColor="@color/text_white"
                    android:headerBackground="@color/text_white"
                    android:timePickerMode="spinner"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp"
                android:orientation="vertical">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginVertical="3sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출발 전 알람"
                        android:textColor="@color/text_white"
                        android:padding="7sp"/>
                    <Switch
                        android:id="@+id/alarm_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7sp"
                        android:layout_marginHorizontal="10sp"
                        android:scaleX="1.2"
                        android:scaleY="1"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/path_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp"
                android:animateLayoutChanges="true"
                android:visibility="gone">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginVertical="3sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="7sp"
                    android:padding="7sp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="출발지"
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"
                            android:textAlignment="center"/>
                        <TextView
                            android:id="@+id/src_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ed_text"
                            android:layout_marginTop="10sp"
                            android:textAlignment="center"
                            android:text="현재 위치"
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_arrow_right_alt_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="도착지"
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"/>
                        <TextView
                            android:id="@+id/dst_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:background="@drawable/ed_text"
                            android:layout_marginTop="10sp"
                            android:text="경북대학교"
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginVertical="5sp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_white"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:padding="7sp"
                        android:text="소요 시간         :"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_white"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:padding="7sp"
                        android:textSize="18sp"
                        android:background="@drawable/ed_text"
                        android:text="60시간 60분 60초"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginVertical="5sp"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="도보"
                            android:textAlignment="center"
                            android:textColor="@color/text_white"
                            android:layout_weight="1"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="대중교통"
                            android:textAlignment="center"
                            android:textColor="@color/text_white"
                            android:layout_weight="1"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="자가용"
                            android:textAlignment="center"
                            android:textColor="@color/text_white"
                            android:layout_weight="1"/>
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginVertical="5sp"
                    android:orientation="vertical">
                    <fragment
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/map"
                        tools:context=".MapsActivity"
                        android:name="com.google.android.gms.maps.SupportMapFragment" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ago_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginBottom="10sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7sp"
                    android:layout_marginTop="7sp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7sp"
                        android:src="@drawable/ic_baseline_access_alarms_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_white"
                        android:paddingVertical="7sp"
                        android:paddingHorizontal="14sp"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:layout_marginHorizontal="7sp"
                        android:layout_gravity="center"
                        android:background="@drawable/ed_text"
                        android:text="10분 전"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ago_timepicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginVertical="3sp"/>
                <TimePicker
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5sp"
                    android:timePickerMode="spinner"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginBottom="10sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7sp"
                    android:layout_marginTop="7sp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7sp"
                        android:src="@drawable/ic_baseline_repeat_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_white"
                        android:paddingVertical="7sp"
                        android:paddingHorizontal="14sp"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:layout_marginHorizontal="7sp"
                        android:layout_gravity="center"
                        android:background="@drawable/ed_text"
                        android:text="반복 안 함"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/line_white"
                        android:layout_marginVertical="3sp"/>
                    <TimePicker
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5sp"
                        android:timePickerMode="spinner"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginBottom="10sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7sp"
                    android:layout_marginTop="7sp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7sp"
                        android:src="@drawable/ic_baseline_edit_note_24"/>
                    <EditText
                        android:id="@+id/memo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_white"
                        android:paddingVertical="7sp"
                        android:paddingHorizontal="14sp"
                        android:textSize="18sp"
                        android:layout_marginHorizontal="7sp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:hint="메모"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:paddingVertical="10sp"
            android:textSize="15sp"
            android:background="@color/edit_white"
            android:textColor="@color/text_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="취소"
            android:layout_weight="1"
            app:strokeColor="@color/line_white"
            app:strokeWidth="2dp"/>
        <Button
            android:paddingVertical="10sp"
            android:textSize="15sp"
            android:background="@color/edit_white"
            android:textColor="@color/text_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="저장"
            android:layout_weight="1"
            app:strokeColor="@color/line_white"
            app:strokeWidth="2dp"/>

    </LinearLayout>

</RelativeLayout>