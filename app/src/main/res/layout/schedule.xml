<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20sp"
                android:layout_marginVertical="5sp"
                android:textColor="@color/text_white"
                android:shadowColor="@color/text_white"
                android:text=" 제목"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일정 시간"
                    android:padding="8sp"
                    android:layout_margin="5sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <Switch
                    android:text="하루종일    "
                    android:textColor="@color/text_white"
                    android:id="@+id/allday_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:layout_margin="5sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="7sp"
                    android:padding="7sp"
                    app:layout_constraintTop_toBottomOf="@+id/allday_switch"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1월 18일 (수)"
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="오전 8:00"
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_arrow_right_alt_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="1월 18일 (수)"
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="오전 8:00"
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginVertical="3sp"/>
                <DatePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:calendarTextColor="@color/text_white"
                    android:headerBackground="@color/text_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginVertical="3sp"/>
                <TimePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:calendarTextColor="@color/text_white"
                    android:headerBackground="@color/text_white"
                    android:timePickerMode="spinner"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginVertical="3sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출발전 알람"
                        android:textColor="@color/text_white"
                        android:padding="7sp"/>
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7sp"
                        android:layout_marginHorizontal="10sp"
                        android:scaleX="1.2"
                        android:scaleY="1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_white"
                    android:layout_marginVertical="3sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="7sp"
                    android:padding="7sp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="출발지"
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ed_text"
                            android:layout_marginTop="10sp"
                            android:textAlignment="center"
                            android:text="민석 집"
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_arrow_right_alt_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="도착지"
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:background="@drawable/ed_text"
                            android:layout_marginTop="10sp"
                            android:text="경북대학교"
                            android:textColor="@color/text_white"
                            android:textSize="18sp"
                            android:padding="5sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_white"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:padding="7sp"
                        android:text="소요 시간         :"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_white"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:padding="7sp"
                        android:textSize="18sp"
                        android:background="@drawable/ed_text"
                        android:text="60시간 60분 60초"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10sp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="7sp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="7sp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_baseline_access_alarms_24"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/text_white"
                            android:padding="7sp"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:layout_marginHorizontal="7sp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/ed_text"
                            android:text="10분 전"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="@color/line_white"
                            android:layout_marginVertical="3sp"/>
                        <TimePicker
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5sp"
                            android:timePickerMode="spinner"/>
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.gms.maps.MapView
                    android:layout_margin="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10sp"
        android:layout_marginHorizontal="5sp">
        <Button
            android:paddingVertical="10sp"
            android:background="@color/edit_white"
            android:textColor="@color/text_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="취소"
            android:layout_weight="1"
            android:layout_marginHorizontal="5sp"
            app:strokeColor="@color/line_white"
            app:strokeWidth="2dp"/>
        <Button
            android:paddingVertical="10sp"
            android:background="@color/edit_white"
            android:textColor="@color/text_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="저장"
            android:layout_weight="1"
            android:layout_marginHorizontal="5sp"
            app:strokeColor="@color/line_white"
            app:strokeWidth="2dp"/>

    </LinearLayout>

</RelativeLayout>