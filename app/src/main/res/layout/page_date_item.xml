<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="PageDateItemBinding">
        <variable
            name="height"
            type="int" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/page_date_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        setHeight="@{height}">

        <TextView
            android:id="@+id/page_date_item_day_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="00"/>

        <LinearLayout
            android:id="@+id/page_date_item_schedule_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <TextView
            android:id="@+id/page_date_item_schedule_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>
</layout>