<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치검색"/>
            <Button
                android:id="@+id/next_xml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재모의 디자인"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/activity_main_auth_test_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="auth_test"/>

                <Button
                    android:id="@+id/activity_main_DB_test_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="db_test"/>
                <Button
                    android:id="@+id/activity_main_schedule_make_test_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="make"/>

                <Button
                    android:id="@+id/custom_calendar_test_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="custom_calendar_test"/>

                <Button
                    android:id="@+id/activity_main_viewPager_test_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="view_pager_test"/>

                <Button
                    android:id="@+id/activity_main_slidingpanelayout_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="slidingpanelayout test"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>